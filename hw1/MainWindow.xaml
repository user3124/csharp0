<Window x:Class="hw1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock FontFamily="Comic Sans MS" FontSize="14" Margin="20,0,0,0" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Ребро куба A:</TextBlock>
        <TextBox FontFamily="Comic Sans MS" FontSize="18" Grid.Row="0" Grid.Column="1" Name="TextBoxA" Height="36" Width="220" Margin="0,10,0,5" HorizontalAlignment="Left"/>

        <TextBlock FontFamily="Comic Sans MS" FontSize="14" Margin="20,0,0,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Радиус шара R:</TextBlock>
        <TextBox FontFamily="Comic Sans MS" FontSize="18" Grid.Row="1" Grid.Column="1" Name="TextBoxR" Height="36" Width="220" Margin="0,5,0,5" HorizontalAlignment="Left"/>

        <Button Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"  
                Height="40" Width="220" Margin="0,5,0,10"
                HorizontalAlignment="Left" Background="#007FFF"
                Click="CalculateButton_Click">
            <TextBlock Foreground="White" FontFamily="Comic Sans MS" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center">Вычислить</TextBlock>
        </Button>

        <TextBlock FontFamily="Comic Sans MS" FontSize="18" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Height="49" Name="ResultTextBlock" TextWrapping="Wrap"/>
    </Grid>
</Window>
